<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:text="@string/tvOvitrampa" />
        <AutoCompleteTextView
            android:id="@+id/etOvitrampa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/font_size"
            android:text="" >

            <requestFocus />
        </AutoCompleteTextView>

       <!-- <Spinner
            android:id="@+id/spOvitrampa"
            android:layout_width="match_parent"
            android:textSize="@dimen/font_size"
            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_size"
            android:text="@string/tvInstala" />

        <EditText
            android:id="@+id/etInstala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/font_size"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_size"
            android:text="@string/tvRetira" />

        <EditText
            android:id="@+id/etRetira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/font_size"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:text="@string/rgLocal" />

        <RadioGroup
            android:id="@+id/rgLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/chkPeri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="@dimen/font_size"
                android:text="@string/chkPeri" />

            <RadioButton
                android:id="@+id/chkIntra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:text="@string/chkIntra" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:text="@string/tvObs" />

        <Spinner
            android:id="@+id/spObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/btSalva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/novo"
            android:paddingRight="80sp"
            android:textSize="@dimen/font_small"
            android:text="@string/btSalva" />
    </LinearLayout>

</ScrollView>